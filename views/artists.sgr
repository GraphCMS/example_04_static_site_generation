extends(src='layout.sgr')
  block(name='content')
    .header-container
      header
        h1 All Artists
      .pageImage
        img(src='/img/microphone.svg')

    section
      ul
        each(loop='artist in artists')
          li
            a(href='/artist/{{ artist.slug }}')
              .card
                img(src='https://media.graphcms.com/resize=w:140,h:140,fit:crop/{{ artist.picture.handle }}')
                .title {{ artist.name }}
